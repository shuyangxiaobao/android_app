<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/progressbar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressbar2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progressbar3"
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <!--
    style="?android:attr/progressBarStyleHorizontal"
    style="@android:style/Widget.ProgressBar.Horizontal"



    <ProgressBar
        android:id="@+id/day6_horizonprogressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="80" />

        style="@android:style/Widget.ProgressBar.Horizontal"


        加载自定义进度条样式
        android:progressDrawable="@drawable/day6_progressbar"


        -->


    <ProgressBar
        android:id="@+id/day6_horizonprogressbar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progressDrawable="@drawable/day6_progressbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:secondaryProgress="80" />


    <Button
        android:id="@+id/day6view_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add" />

    <Button
        android:id="@+id/day6view_reduce"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reduce" />

    <Button
        android:id="@+id/day6view_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reset" />

    <Button
        android:id="@+id/day6_show"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/day6_show" />

    <TextView
        android:id="@+id/day6_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="28dp" />

</LinearLayout>