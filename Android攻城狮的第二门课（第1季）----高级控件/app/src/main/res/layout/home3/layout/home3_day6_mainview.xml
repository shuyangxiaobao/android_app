<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start:" />

    <Button
        android:id="@+id/home3_day6_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="开启服务"
        />

    <Button
        android:id="@+id/home3_day6_button2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停服务" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bind:" />

    <Button
        android:id="@+id/home3_day6_button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="绑定服务" />

    <Button
        android:id="@+id/home3_day6_button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="播放" />

    <Button
        android:id="@+id/home3_day6_button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="暂停" />

    <Button
        android:id="@+id/home3_day6_button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一首" />

    <Button
        android:id="@+id/home3_day6_button7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="上一首" />

    <Button
        android:id="@+id/home3_day6_button8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解除绑定" />


</LinearLayout>