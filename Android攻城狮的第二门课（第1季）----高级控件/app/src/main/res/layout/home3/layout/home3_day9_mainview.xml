<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">




    <!--
    android:gestureColor="#ff0000"
    android:eventsInterceptionEnabled="true" 当手势识别出来时，是否拦截该手势动作
    android:fadeDuration="5000"   当用户画完，手势效果淡出的时间
    android:fadeEnabled="true"    当用户画完，手势是否自动淡出
    android:gestureStrokeType="multiple"  笔画类型
    android:gestureStrokeWidth="20dp"     笔画粗细


    -->
    <android.gesture.GestureOverlayView
        android:id="@+id/home3_day9_gesture1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gestureColor="#ff0000"
        android:eventsInterceptionEnabled="true"
        android:fadeDuration="5000"
        android:fadeEnabled="false"
        android:gestureStrokeType="multiple"
        android:gestureStrokeWidth="20"
        >

        <ImageView
            android:id="@+id/home3_day9_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/day11_pic1" />

    </android.gesture.GestureOverlayView>
</LinearLayout>